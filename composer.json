{
    "name": "oxid-esales/smarty-to-twig-converter",
    "type": "application",
    "description": "A script to convert smarty template engine to twig",
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "symfony/console": "~2.1",
        "symfony/filesystem": "~2.1",
        "symfony/finder": "~2.1",
        "sebastian/diff": "2.*",
        "phpunit/phpunit": "^6",
        "doctrine/dbal": "^2.9",
        "phpunit/dbunit": "3.*",
        "ext-dom": "*"
    },
    "require-dev": {
        "oxid-esales/coding-standards": "^v3.0.5",
        "ext-pdo": "*"
    },
    "autoload": {
        "psr-0": { "toTwig\\": "app/" }
    },
    "autoload-dev": {
        "psr-4": { "sankar\\ST\\Tests\\": "tests/" }
    },
    "bin": ["toTwig"]
}
